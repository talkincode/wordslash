{
  "name": "wordslash",
  "displayName": "WordSlash",
  "description": "English vocabulary learning with spaced repetition in VS Code",
  "version": "0.1.0",
  "publisher": "wordslash",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Education",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wordslash.openFlashcards",
        "title": "WordSlash: Open Flashcards"
      },
      {
        "command": "wordslash.addCardFromSelection",
        "title": "WordSlash: Add Card from Selection"
      },
      {
        "command": "wordslash.exportBackup",
        "title": "WordSlash: Export Backup"
      },
      {
        "command": "wordslash.importBackup",
        "title": "WordSlash: Import Backup"
      },
      {
        "command": "wordslash.dev.generateSampleData",
        "title": "WordSlash: [Dev] Generate Sample Data"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "wordslash.addCardFromSelection",
          "when": "editorHasSelection",
          "group": "wordslash"
        }
      ]
    },
    "configuration": {
      "title": "WordSlash",
      "properties": {
        "wordslash.privacy.storeFilePath": {
          "type": "boolean",
          "default": false,
          "description": "Store file path in card context (privacy consideration)"
        },
        "wordslash.newCardsPerDay": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum number of new cards to learn per day"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  }
}
