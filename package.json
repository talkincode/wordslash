{
  "name": "wordslash",
  "displayName": "WordSlash",
  "description": "English vocabulary learning with spaced repetition in VS Code",
  "version": "0.1.0",
  "publisher": "wordslash",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/talkincode/wordslash"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Education",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "wordslash",
          "title": "WordSlash",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "wordslash": [
        {
          "type": "webview",
          "id": "wordslash.dashboardView",
          "name": "Dashboard",
          "icon": "media/icon.svg",
          "contextualTitle": "WordSlash"
        }
      ]
    },
    "commands": [
      {
        "command": "wordslash.openDashboard",
        "title": "WordSlash: Open Dashboard",
        "icon": "$(book)"
      },
      {
        "command": "wordslash.openFlashcards",
        "title": "WordSlash: Open Flashcards",
        "icon": "$(note)"
      },
      {
        "command": "wordslash.addCardFromSelection",
        "title": "WordSlash: Add Card from Selection"
      },
      {
        "command": "wordslash.exportBackup",
        "title": "WordSlash: Export Backup"
      },
      {
        "command": "wordslash.importBackup",
        "title": "WordSlash: Import Backup"
      },
      {
        "command": "wordslash.importBulk",
        "title": "WordSlash: Import Cards from JSON"
      },
      {
        "command": "wordslash.exportTemplate",
        "title": "WordSlash: Export JSON Template"
      },
      {
        "command": "wordslash.dev.generateSampleData",
        "title": "WordSlash: [Dev] Generate Sample Data"
      },
      {
        "command": "wordslash.openSettings",
        "title": "WordSlash: Open Settings"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "wordslash.addCardFromSelection",
          "when": "editorHasSelection",
          "group": "wordslash"
        }
      ]
    },
    "configuration": {
      "title": "WordSlash",
      "properties": {
        "wordslash.privacy.storeFilePath": {
          "type": "boolean",
          "default": false,
          "description": "Store file path in card context (privacy consideration)"
        },
        "wordslash.newCardsPerDay": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum number of new cards to learn per day"
        },
        "wordslash.tts.engine": {
          "type": "string",
          "default": "youdao",
          "enum": ["youdao", "google", "browser", "azure", "openai"],
          "enumDescriptions": [
            "Youdao Dictionary - High quality human recordings for words",
            "Google Translate TTS - Good quality, works for phrases",
            "Browser Built-in - System speech synthesis (offline)",
            "Azure Neural TTS - Premium quality (requires API key)",
            "OpenAI TTS - Premium quality (requires API key)"
          ],
          "description": "Text-to-speech engine for pronunciation"
        },
        "wordslash.tts.rate": {
          "type": "number",
          "default": 1.0,
          "minimum": 0.5,
          "maximum": 2.0,
          "description": "Speech rate (0.5 = slow, 1.0 = normal, 2.0 = fast)"
        },
        "wordslash.tts.autoPlay": {
          "type": "boolean",
          "default": true,
          "description": "Automatically play pronunciation when card appears"
        },
        "wordslash.tts.azureKey": {
          "type": "string",
          "default": "",
          "description": "Azure Speech Services API key (for azure engine)"
        },
        "wordslash.tts.azureRegion": {
          "type": "string",
          "default": "eastus",
          "description": "Azure Speech Services region (e.g., eastus, westus)"
        },
        "wordslash.tts.openaiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key (for openai engine)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  }
}
